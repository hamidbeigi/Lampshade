@page
@model ServiceHost.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود و ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                @if (Model.Message != null)
                                {
                                    <div class="alert alert-danger">@Model.Message</div>
                                }
                                <form method="post" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کامل</label>
                                                <input asp-for="Register.Fullname" placeholder="نام کامل">
                                                <span asp-validation-for="Register.Fullname" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کاربری</label>
                                                <input asp-for="Register.Username" placeholder="نام کاربری">
                                                <span asp-validation-for="Register.Username" class="text-danger"></span>

                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>موبایل</label>
                                                <input asp-for="Register.Mobile" placeholder="موبایل">
                                                <span asp-validation-for="Register.Mobile" class="text-danger"></span>
                                            </div>
                                                <div class="col-md-12 mb-20">

                                                <label>کلمه رمز</label>
                                                <input asp-for="Register.Password" type="password" placeholder="کلمه رمز">
                                                <span asp-validation-for="Register.Password" class="text-danger"></span>
                                            </div>

                                            <div class="col-md-12 mb-20">
                                                <label>تایید کلمه رمز</label>
                                                <input asp-for="Register.RePassword" type="password" placeholder="تایید کلمه رمز">
                                                <span asp-validation-for="Register.RePassword" class="text-danger"></span>

                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>