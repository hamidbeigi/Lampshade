@page "{id}"
@model ServiceHost.Pages.ProductCategoryModel
@{
    ViewData["Title"] = Model.ProductCategory.Name;
    ViewData["keywords"] = Model.ProductCategory.Keywords;
    ViewData["metaDescription"] = Model.ProductCategory.MetaDescription;
    // صفحه گروه محصول
    ViewData["BodyClass"] = "page-category";
}


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title">@Model.ProductCategory.Name</h1>
                        <h2>@Model.ProductCategory.Description</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="./Index">صفحه اصلی</a></li>
                            <li class="active">@Model.ProductCategory.Name</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="shop-header">
                                    <div class="shop-header__left">
                                        <div class="shop-header__left__message">
                                            تعداد محصولات (@Html.FaNumbersPlainText(@Model.ProductCategory.Products.Count()))
                                        </div>
                                    </div>

                                    <div class="shop-header__right">

                                        <div class="single-select-block d-inline-block">
                                            <span class="select-title">نمایش :</span>
                                            <select>
                                                <option value="1">@Html.FaNumbersPlainText(10)</option>
                                                <option value="2">@Html.FaNumbersPlainText(20)</option>
                                                <option value="3">@Html.FaNumbersPlainText(30)</option>
                                                <option value="4">@Html.FaNumbersPlainText(40)</option>
                                            </select>
                                        </div>

                                        <div class="single-select-block d-inline-block">
                                            <span class="select-title">مرتب سازی بر اساس :</span>
                                            <select class="pr-0">
                                                <option value="1">@Html.FaNumbersPlainText("پیشفرض")</option>
                                                <option value="2">@Html.FaNumbersPlainText("نام محصول")</option>
                                                <option value="3">@Html.FaNumbersPlainText("قیمت کم به زیاد")</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="shop-page-content">
                                    <div class="row shop-product-wrap grid three-column">
                                        @foreach (var product in Model.ProductCategory.Products)
                                        {
                                            <div class="col-12 col-lg-4 col-md-4 col-sm-6">
                                                <div class="single-grid-product grid-view-product">
                                                    <div class="single-grid-product__image">
                                                        @if (product.HasDiscount)
                                                        {
                                                            <div class="single-grid-product__label">
                                                                <span class="sale">-@Html.FaNumbersPlainText(@product.DiscountRate)%</span>
                                                            </div>
                                                        }
                                                        <a asp-page="/Product" asp-route-id="@product.Slug">
                                                            <img src="~/images/@product.Picture" class="img-fluid"
                                                                 alt="@product.PictureAlt" title="@product.PictureTitle">
                                                        </a>
                                                    </div>
                                                    <div class="single-grid-product__content">
                                                        <div class="single-grid-product__category-rating">
                                                            <span class="category">
                                                                <a asp-page="/ProductCategory" asp-route-id="@Model.ProductCategory.Slug">@Html.FaNumbersPlainText(@Model.ProductCategory.Name)</a>
                                                            </span>
                                                            <span class="rating">
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                            </span>
                                                        </div>

                                                        <h2 class="single-grid-product__title">
                                                            <a asp-page="/Product" asp-route-id="@product.Slug">@Html.FaNumbersPlainText(@product.Name)</a>
                                                        </h2>
                                                        <p class="single-grid-product__price">
                                                            @if (product.HasDiscount)
                                                            {
                                                                <span class="discounted-price">@Html.FaNumbersPlainText(@product.PriceWithDiscount) تومان</span>
                                                                <span class="main-price discounted">@Html.FaNumbersPlainText(@product.Price) تومان</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="main-price">@Html.FaNumbersPlainText(@product.Price) تومان</span>
                                                            }
                                                        </p>
                                                        @if (product.HasDiscount)
                                                        {
                                                            <div class="product-countdown" data-countdown="@product.DiscountExpireDate"></div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="pagination-area">
                                    <div class="pagination-area__left">
                                        نمایش 1 تا 9 از 11 (2 صفحه)
                                    </div>
                                    <div class="pagination-area__right">
                                        <ul class="pagination-section">
                                            <li>
                                                <a class="active" href="#">1</a>
                                            </li>
                                            <li>
                                                <a href="#">2</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/theme/assets/js/countdown-persian.js"></script>